{
  "author": "Easyvie Rreader View",
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/content.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png",
      "300": "icons/icon300.png"
    },
    "default_title": "__MSG_extName__"
  },
  "default_locale": "en",
  "description": "__MSG_extShortDesc__",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "300": "icons/icon300.png"
  },
  "incognito": "split",
  "manifest_version": 3,
  "minimum_chrome_version": "102",
  "name": "__MSG_extName__",
  "permissions": [
    "alarms",
    "contextMenus",
    "declarativeNetRequest",
    "favicon",
    "notifications",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "html/*",
        "css/*", 
        "js/*",
        "images/*",
        "_locales/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "version": "1.1.0",
  "update_url": "https://edge.microsoft.com/extensionwebstorebase/v1/crx"
}